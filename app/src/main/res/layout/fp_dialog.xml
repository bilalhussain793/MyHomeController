<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#e4e4e4"
            android:gravity="center_vertical"
            android:weightSum="7"
            android:orientation="horizontal">

<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginLeft="20dp"
    android:src="@drawable/sm2"
    android:tint="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="Login"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp"
                android:textStyle="bold" />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center|right"
                android:id="@+id/bc"
                android:backgroundTint="@color/colorPrimaryDark"
                android:background="@drawable/canc"/>
        </LinearLayout>
        <TextView
            android:id="@+id/headingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Fingerprint Authentication"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/fingerprintImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/headingLabel"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/paraLabel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fingerprintImage"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Place your Finger to Login."
            android:textAlignment="center" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:textColor="#49209b"
            android:visibility="gone"
            android:id="@+id/mt"/>
    </LinearLayout>


</LinearLayout>